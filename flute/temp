<script type="text/javascript">
var c = document.getElementById("myCanvas");
var ctx = c.getContext("2d");

$(function(){
	init();
});

function init () {
	//333/762 111/254
	//canvasLoad();
	var x1 = 136;
	var timer1 = setInterval(function () {
		
		x1 += -1;
		ctx.clearRect(0, 0, c.width, c.height);
		var my_gradient=ctx.createLinearGradient(0,0,0,170);
 		my_gradient.addColorStop(0.4,"rgb(255,255,255)");
 		my_gradient.addColorStop(0.6,"rgb(255,255,255)");

		if (x1 >= 0) {
			my_gradient.addColorStop(0, "rgb("+x1+","+x1+","+x1+")");
			my_gradient.addColorStop(1, "rgb("+x1+","+x1+","+x1+")");
		}else{
			this.clearInterval(timer1);
			
			my_gradient.addColorStop(0, "rgb(0,0,0)");
			my_gradient.addColorStop(1,"rgb(0,0,0)");
			
		}
		//矩形渐变
		ctx.fillStyle=my_gradient;
		ctx.globalAlpha=0.9;//透明度
		ctx.fillRect(0, 0, c.width, c.height);
		
	}, 50);
	
	//上面标题文字出现
	$(".div1").show(2000);
	
	//下方次要文字出现
	setTimeout(function () {
		$(".div2").show(1000);
	}, 2000);
	
	//下方次要文字消失
	setTimeout(function () {
		$(".div2").hide(1000);
	}, 4000);
	
	//上面标题文字消失
	setTimeout(function () {
		$(".div1").hide(1000);
	}, 5000);
	
	//图片出现
	setTimeout(function () {
		$(".image_div").show(2000);
		$(".div3").show(1000);
		
	}, 7000);
	
	//移动图片
	setTimeout(function () {
		moveImageToTop();		
	}, 10000);
	
}

//向上移动图片
function moveImageToTop () {
	var topNum = -10;
	var rightNum = 0;
	
	//移动大图片
	var timer = setInterval(function () {
		topNum += -1;
		
		if(topNum >= -25){
			$(".image_div").css("top", topNum + "%");
		}else{
			this.clearInterval(timer);
		}
	}, 150);
	//所有背景改为灰色
	backgroundToGray();
}

//所有背景改为灰色
function backgroundToGray () {
	var x2 = 255;
	var x3 = 0;
	var timer2 = setInterval(function () {
		
		x2 += -1;
		x3 += 1;
		ctx.clearRect(0, 0, c.width, c.height);
		var my_gradient=ctx.createLinearGradient(0,0,0,170);

		if (x3 <= 136) {
			my_gradient.addColorStop(0, "rgb("+x3+","+x3+","+x3+")");
			my_gradient.addColorStop(1, "rgb("+x3+","+x3+","+x3+")");
		}else{
			my_gradient.addColorStop(0, "rgb(136,136,136)");
			my_gradient.addColorStop(1, "rgb(136,136,136)");
		}
		
		if (x2 >= 136) {
			my_gradient.addColorStop(0.4, "rgb("+x2+","+x2+","+x2+")");
			my_gradient.addColorStop(0.6, "rgb("+x2+","+x2+","+x2+")");
		}else{
			this.clearInterval(timer2);
			my_gradient.addColorStop(0.4, "rgb(136,136,136)");
			my_gradient.addColorStop(0.6, "rgb(136,136,136)");
			
			//大面积货币账户具体信息灰色改白色
			bigMoneyGrayToWhite();
		}
		//矩形渐变
		ctx.fillStyle=my_gradient;
		ctx.globalAlpha=0.7;//透明度
		ctx.fillRect(0, 0, c.width, c.height);
		
	}, 30);
}

//大面积货币账户具体信息灰色改白色
function bigMoneyGrayToWhite () {
	var x = 136;
	var alpha = 1;
	var timer3 = setInterval(function () {
		x += 7;
		alpha += -0.05;
		if(x <= 255){
			ctx.clearRect(5, 43, c.width - 10, 55);
			ctx.fillStyle = "rgba("+x+","+x+","+x+","+alpha+")";
		}else{
			this.clearInterval(timer3);
			ctx.clearRect(5, 43, c.width - 10, 55);
			setTimeout(function () {
				//大面积货币账户具体信息白色缓慢改为灰色
				WhiteToGrayOnDown();
				
				//向下移动图片并切换图片（top 25）
				moveImageToDown();
			}, 2000);
		}
		ctx.fillRect(5, 43, c.width - 10, 55);
	}, 200);
}

//大面积货币账户具体信息白色缓慢改为灰色
function WhiteToGrayOnDown () {
	var yHeight = 0;
	var timer4 = setInterval(function () {
		yHeight += 1;
		ctx.clearRect(5, 43, c.width - 10, 55);
		ctx.fillStyle = "rgb(136,136,136)";
		ctx.globalAlpha=0.7;//透明度
		
		if(yHeight < 55){
			ctx.fillRect(5, 43, c.width - 10,yHeight);
		}else{
			this.clearInterval(timer4);
			clear();
		}
		
	}, 30);
}

//向下移动图片并切换图片(top 25)
function moveImageToDown () {
	var topNum = -25;
	var timer5 = setInterval(function () {
		topNum += 1;
		
		if(topNum <= 25){
			$(".image_div").css("top", topNum + "%");
		}else{
			this.clearInterval(timer5);
			//更换为有选项的图片
// 			$(".bigImages").attr("src", "./images/position/2.png");
			$("#image1").hide();
			$("#image2").show();
			
			//清除第一个小面积行
			setTimeout(function () {
				clearOneRows();
			}, 2000);
			
		}
	}, 100);
}

//清除第一个小面积
function clearOneRows () {
	var xWidth = 0;
	var timer6 = setInterval(function () {
		xWidth += 1;
		if (xWidth <= 193) {
			ctx.clearRect(78, 53, xWidth, 7);
		} else {
			this.clearInterval(timer6);
			$("#des0").hide(1000);
			$("#des1").show(1000);
			//遍历清除剩下的单个小面积行
			eachClearOneRows();
		}
	}, 10);
}

//遍历清除剩下的单个小面积行
function eachClearOneRows () {
	var bodyHeight = document.body.clientHeight;
	var topNum = bodyHeight * 0.25;
	var endNum = bodyHeight * 0.25;
	var i = 1;
	var timer7 = setInterval(function () {
		
		//跳过证券动态
		if (i == 7) {
			i ++;
			endNum += -1 * (bodyHeight * 0.048 * 2);
		} else {
			endNum += -1 * (bodyHeight * 0.048);
		}
		var timer8 = setInterval(function () {
			topNum += -1;
			if (topNum >= endNum) {
				$(".image_div").css("top", topNum + "px");
			} else {
				this.clearInterval(timer8);
				if (i == 8) {
					var k = i - 1;
					$("#des" + k).hide();
				} else {
					$("#des" + i).hide(1000);
				}
				var j = i + 1;
				$("#des" + j).show(1000);
				i ++;
			}
		}, 50);
		if (i >= 10) {
			this.clearInterval(timer7);
			//回退到证券动态
			endNum += bodyHeight * 0.048 * 3;
			var timer9 = setInterval(function () {
				topNum += 1;
				if (topNum <= endNum) {
					$(".image_div").css("top", topNum + "px");
				} else {
					this.clearInterval(timer9);
					$("#des8").show(1000);
					
					//加载最后一张图片
					setTimeout(function () {
						loadLastImage(bodyHeight);
					}, 3000);
				}
			}, 50);
		}
		
	}, 4000);

}

//加载最后一张图片
function loadLastImage (bodyHeight) {
	clear();
	var topCss = $(".image_div").css("top");
	var topNum1 = topCss.substring(0, topCss.length - 1);
	topNum1 = parseFloat(topNum1) / bodyHeight * 100;
	//var topNum1 = $(".image_div").css("top") / bodyHeight;
	var timer10 = setInterval(function () {
		topNum1 += 1;
		if (topNum1 <= 25) {
			$(".image_div").css("top", topNum1 + "%");
		} else {
			this.clearInterval(timer10);
			$(".image_div").css("top", "25%");
// 			$(".bigImages").attr("src", "./images/position/3.png").css("height", "210%");
			$("#image2").hide();
			$("#image3").show();
			
			setTimeout(function () {
				//移动最后一张图片至-45%
				moveLastImage();
			}, 2000);
		}
	}, 100);
}

//移动最后一张图片至-45%
function moveLastImage () {
	var topNum = 25;
	var timer11 = setInterval(function () {
		topNum += -1;
		if (topNum >= -45) {
			$(".image_div").css("top", topNum + "%");
		} else {
			this.clearInterval(timer11);
		}
	}, 100);
}

function clear () {
	ctx.clearRect(0, 0, c.width, c.height);
	ctx.fillStyle="rgb(136,136,136)";
	ctx.globalAlpha=0.7;//透明度
	ctx.fillRect(0, 0, c.width, c.height);
}

</script>
</html>

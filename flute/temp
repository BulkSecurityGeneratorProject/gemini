<script type="text/javascript">
var c = document.getElementById("myCanvas");
var ctx = c.getContext("2d");

var bodyWidth = document.body.clientWidth;
var bodyHeight = document.body.clientHeight;


$(function(){
	init();
});

function init () {
	
	//canvasLoad();
	var x1 = 136;
	var timer3 = setInterval(function () {
		
		x1 += -1;
		ctx.clearRect(0, 0, bodyWidth, bodyHeight);
		var my_gradient=ctx.createLinearGradient(0,0,0,170);
 		my_gradient.addColorStop(0.4,"rgb(255,255,255)");
 		my_gradient.addColorStop(0.6,"rgb(255,255,255)");

		if (x1 >= 0) {
			my_gradient.addColorStop(0, "rgb("+x1+","+x1+","+x1+")");
			my_gradient.addColorStop(1, "rgb("+x1+","+x1+","+x1+")");
		}else{
			this.clearInterval(timer3);
			
			my_gradient.addColorStop(0, "rgb(0,0,0)");
			my_gradient.addColorStop(1,"rgb(0,0,0)");
			
		}
		//矩形渐变
		ctx.fillStyle=my_gradient;
		ctx.globalAlpha=0.9;//透明度
		ctx.fillRect(0, 0, bodyWidth, bodyHeight);
		
	}, 50);
	
	//上面标题文字出现
	$(".div1").show(2000);
	
	//下方次要文字出现
	setTimeout(function () {
		$(".div2").show(1000);
	}, 2000);
	
	//下方次要文字消失
	setTimeout(function () {
		$(".div2").hide(1000);
	}, 4000);
	
	//上面标题文字消失
	setTimeout(function () {
		$(".div1").hide(1000);
	}, 5000);
	
	//图片出现
	setTimeout(function () {
		$(".image_div").show(2000);
		$(".div3").show(1000);
		
	}, 7000);
	return;
	//移动图片
	setTimeout(function () {
		moveImage();		
	}, 10000);
	
}

//移动图片
function moveImage () {
	var topNum = -10;
	var rightNum = 0;
	var imgScale = 1.0;//图片放大倍数
	
	//更换为有选项的图片
	$(".bigImages").attr("src", "./images/2.png");
	
	//移动大图片
	var timer = setInterval(function () {
		topNum += -2;
		rightNum += 2;
		imgScale += 0.05;
		
		if(topNum >= -40){
			$(".image_div").css("top", topNum + "%");
		}
		if(imgScale <= 1.15){
			$(".bigImages").attr("style","-webkit-transform:scale(" + imgScale + "," + imgScale + ");-moz-transform:scale(" + imgScale + "," + imgScale + ");-transform:scale(" + imgScale + "," + imgScale + ");");
		}
		if(rightNum <= 20){
			$(".image_div").css("right", rightNum + "%")
		}else{
			this.clearInterval(timer);
			setTimeout(function () {
				//清除需点击列
				var xWidth = 0;
				var timer5 = setInterval(function () {
					xWidth += 1;
					if(xWidth <= 170){
						ctx.clearRect(62,58,xWidth,10);
					}else{
						this.clearInterval(timer5);
						return;
						//清除单个需点击的列
						setTimeout(function(){
							clearOneRows();
						}, 2000);
						return;
					}
				}, 10);
			}, 1000);
		}
	}, 200);
}

//清除单个需要点击的列(Qukly Link)
function clearOneRows () {
	ctx.clearRect(0, 0, bodyWidth, bodyHeight);
	var my_gradient=ctx.createLinearGradient(0,0,0,170);
	my_gradient.addColorStop(0, "rgb(0,0,0)");
	my_gradient.addColorStop(0.4,"rgb(255,255,255)");
	my_gradient.addColorStop(0.6,"rgb(255,255,255)");
	my_gradient.addColorStop(1,"rgb(0,0,0)");
	ctx.fillStyle=my_gradient;
	ctx.globalAlpha=0.8;//透明度
	ctx.fillRect(0, 0, bodyWidth, bodyHeight);
	
	//所有背景改为灰色
	setTimeout(function () {
		backgroundToGray();
		return;
	}, 1000);
}

//所有背景改为灰色
function backgroundToGray () {
	var x2 = 255;
	var x3 = 0;
	var timer4 = setInterval(function () {
		
		x2 += -1;
		x3 += 1;
		ctx.clearRect(0, 0, bodyWidth, bodyHeight);
		var my_gradient=ctx.createLinearGradient(0,0,0,170);

		if (x3 <= 136) {
			my_gradient.addColorStop(0, "rgb("+x3+","+x3+","+x3+")");
			my_gradient.addColorStop(1, "rgb("+x3+","+x3+","+x3+")");
		}else{
			my_gradient.addColorStop(0, "rgb(136,136,136)");
			my_gradient.addColorStop(1, "rgb(136,136,136)");
		}
		
		if (x2 >= 136) {
			my_gradient.addColorStop(0.4, "rgb("+x2+","+x2+","+x2+")");
			my_gradient.addColorStop(0.6, "rgb("+x2+","+x2+","+x2+")");
		}else{
			this.clearInterval(timer4);
			my_gradient.addColorStop(0.4, "rgb(136,136,136)");
			my_gradient.addColorStop(0.6, "rgb(136,136,136)");
			
			//加载最后一张图片
			lastImageLoad();
			
		}
		//矩形渐变
		ctx.fillStyle=my_gradient;
		ctx.globalAlpha=0.7;//透明度
		ctx.fillRect(0, 0, bodyWidth, bodyHeight);
		
	}, 10);
}

//加载最后一张图片
function lastImageLoad () {
	var rightNum = 20;
	$(".bigImages").attr("src", "./images/3.png").attr("style", "");
	var timer2 = setInterval(function () {
		$(".image_div").css("top", "-30%");
		rightNum += -2;
		
		if(rightNum >= 0){
			$(".image_div").css("right", rightNum + "%");
		}else{
			this.clearInterval(timer2);
			var x = 136;
			var alpha = 1;
			var timer6 = setInterval(function () {
				x += 7;
				alpha += -0.05;
				if(x <= 255){
					ctx.clearRect(15,31,120,10);
					ctx.clearRect(15,40,270,55);
					ctx.fillStyle = "rgba("+x+","+x+","+x+","+alpha+")";
				}else{
					this.clearInterval(timer6);
					ctx.clearRect(15,31,120,10);
					ctx.clearRect(15,40,270,55);
					//局部由上往下变成灰色
					setTimeout(function () {
						var yHeight = 0;
						var timer7 = setInterval(function () {
							yHeight += 1;
							ctx.clearRect(15,31,120,10);
							ctx.clearRect(15,40,270,55);
							ctx.fillStyle = "rgb(136,136,136)";
							ctx.globalAlpha=0.7;//透明度
							
							if(yHeight < 10){
								ctx.fillRect(15,31,120,yHeight);
								return;
							}else if(yHeight >= 10 && yHeight <= 55){
								ctx.fillRect(15,31,120,10);
								ctx.fillRect(15,40,270,yHeight);
								return;
							}else{
								this.clearInterval(timer7);
								ctx.fillRect(15,31,120,10);
								ctx.fillRect(15,40,270,55);
								setTimeout(function(){
							 		$("div").hide(2000);
							 		ctx.clearRect(0, 0, bodyWidth, bodyHeight);
								}, 2000);
								return;
							}
							
						}, 30);

				 	}, 3000);
					return;
				}
				ctx.fillRect(15,31,120,10);
				ctx.fillRect(15,40,270,55);
			}, 200);
		 	//div消失
		}
		
	}, 300);

}

</script>
</html>

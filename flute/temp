//加载canvas
function canvasLoad () {
	
	//矩形渐变
	var my_gradient=ctx.createLinearGradient(0,0,0,170);
	my_gradient.addColorStop(0,"#888888");
	my_gradient.addColorStop(0.2,"#FFFFFF");
	my_gradient.addColorStop(0.4,"#FFFFFF");
	my_gradient.addColorStop(0.6,"#FFFFFF");
	my_gradient.addColorStop(0.8,"#FFFFFF");
	my_gradient.addColorStop(1,"#888888");
	
// 	ctx.shadowBlur=50;//阴影模糊级别
	ctx.fillStyle = my_gradient;
	ctx.globalAlpha=0.9;//透明度
	ctx.fillRect(0, bodyHeight * 0.02, bodyWidth, bodyHeight * 0.9);
	ctx.stroke();
	
}

